<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">sales_sequence_profile_grid.sales_sequence_profile_grid_data_source</item>
            <item name="deps" xsi:type="string">sales_sequence_profile_grid.sales_sequence_profile_grid_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>sales_sequence_profile_grid_columns</spinner>
        <deps>
            <dep>sales_sequence_profile_grid.sales_sequence_profile_grid_data_source</dep>
        </deps>
    </settings>
    <dataSource name="sales_sequence_profile_grid_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">entity_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Sapiens_OrderPrefix::sales_sequence_profile</aclResource>
        <dataProvider class="Magento\Cms\Ui\Component\DataProvider" name="sales_sequence_profile_grid_data_source">
            <settings>
                <requestFieldName>profile_id</requestFieldName>
                <primaryFieldName>profile_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <filters name="listing_filters">
            <settings>
                <templates>
                    <filters>
                        <select>
                            <param name="template" xsi:type="string">ui/grid/filters/elements/ui-select</param>
                            <param name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</param>
                        </select>
                    </filters>
                </templates>
            </settings>
        </filters>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="sales_sequence_profile_grid_columns">
        <column name="profile_id">
            <settings>
                <label translate="true">ID</label>
            </settings>
        </column>
        <column name="meta_id" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <options class="Sapiens\OrderPrefix\Model\Profile\Source\Sequence"/>
                <filter>select</filter>
                <editor>
                    <editorType>select</editorType>
                </editor>
                <dataType>select</dataType>
                <label translate="true">Entity Type</label>
            </settings>
        </column>
        <column name="prefix">
            <settings>
                <label translate="true">Prefix</label>
            </settings>
        </column>
        <column name="suffix">
            <settings>
                <label translate="true">Suffix</label>
            </settings>
        </column>
        <column name="start_value">
            <settings>
                <label translate="true">Start Value</label>
            </settings>
        </column>
        <column name="step">
            <settings>
                <label translate="true">Step</label>
            </settings>
        </column>
        <actionsColumn name="actions" class="Sapiens\OrderPrefix\Ui\Component\Listing\Column\ProfileActions">
            <settings>
                <indexField>block_id</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>
